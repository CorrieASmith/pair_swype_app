<div class="row">
  <div class="center">
    <h2 class="header center"><%= @user.name %> <%= @user.last_name %></h2>
    <a style="font-size: 10px" href="/users/<%= @user.id %>/edit">Edit</a> |
    <a style="font-size: 10px" class="modal-trigger" href="#modal1">Delete User</a>
  </div>
</div>
<div class="row">

  <img class="materialboxed" id="user_avatar" src="/img/picture.jpg" alt="user_avatar" />

</div>
<div class="col s10 m9 l10">

  <h5 class="header center"><%= @user.cohort.season %> <%= @user.cohort.language %></h5>
  <h5 class="header center"><%= @user.email %></h5>
  <h5 class="header center">Preferences</h5>

  <!-- Modal Structure -->
  <div id="delete-modal" class="modal">
    <div class="modal-content center">
      <h4>Are you sure you want to delete your account?</h4>
      <p>Click Delete below to Confirm</p>
    </div>
    <div class="text-right modal-footer">
      <form action="/users/<%= @user.id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <button style="display: inline; color: 66CCFF;" class="modal-action modal-close waves-effect waves-red btn-flat" type="submit">Delete</button>
        <a class="modal-action modal-close waves-effect waves-red btn-flat">Cancel</a>
      </form>
    </div>
  </div>

  <div id="logout-modal" class="modal">
    <div class="modal-content center">
      <h4>Are you sure you want to log out?</h4>
      <p>Click Logout below to Confirm</p>
    </div>
    <div class="text-right modal-footer">
      <a href="/sessions/logout" class="modal-action modal-close waves-effect waves-red btn-flat">Logout</a>
      <a class="modal-action modal-close waves-effect waves-red btn-flat">Cancel</a>
    </div>

</div>
