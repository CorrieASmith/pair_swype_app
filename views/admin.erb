<h1>Welcome</h1>
<% if Question.any? %>
<ol>
  <% Question.all.each do |question| %>
  <li><%= question.description %></li>
  <% end %>
</ol>
<% else %>
<p>Add questions</p>
<% end %>


<div class="row">
  <form action="/questions" method="post" class="col s12">
    <div class="input-field col s12">
      <label for="description">Question</label>
      <input name="description" id="description" type="text">
    </div>
    <button class="btn-large waves-effect waves-light pink accent-1" type="submit">Add</button>
  </form>
</div>
<br>


<form action="/questions" method="post">
  <input type="hidden" name="_method" value="delete">
    <% if Question.any? %>
      <select id="question_id" name="question_id" type="text">
        <% Question.all.each do |question| %>
        <option value="<%= question.id %>"><%= question.description %></option>
        <% end %>
      </select>
      <button class="btn-large waves-effect waves-light pink accent-1" type="submit">Delete</button>
    <% end %>
</form>


